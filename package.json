{
  "name": "hirezme-back",
  "version": "1.0.0",
  "description": "Back-end for the Hirez me app",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app",
    "start:dev": "./node_modules/.bin/nodemon src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "./node_modules/.bin/jest",
    "test:coverage": "./node_modules/.bin/jest --coverage",
    "test:lint": "./node_modules/.bin/eslint .; exit 0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./__tests__/setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup.js"
    ]
  },
  "author": "Alex Ramirez <armzprz@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "eslint-plugin-jest": "^21.22.0",
    "jest": "^23.5.0",
    "jsonschema": "^1.2.4",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "mongoose": "^5.2.13",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
